@model lesson12_routing.Models.Balance.OrderViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PlaceOrderView</title>
</head>
<body>

<h4>OrderViewModel</h4>
