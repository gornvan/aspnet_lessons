@using lessson26_LocalizatoinInMVC.Controllers;
@using lessson26_LocalizatoinInMVC.Localization;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lessson26_LocalizatoinInMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lessson26_LocalizatoinInMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">lessson26_LocalizatoinInMVC</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="@nameof(HomeController.Index)">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item" id="switch-culture-en-us">
                            <a class="nav-link text-dark ajax-link"
                               asp-area="" asp-controller="CultureSelector"asp-action="@nameof(CultureSelectorController.Index)"
                               asp-route-culture="@SupportedCultures.EnUSCulture">
                               Switch to English
                            </a>
                        </li>
                        <li class="nav-item" id="switch-culture-ru-ru" >
                            <a class="nav-link text-dark ajax-link"
                               asp-area="" asp-controller="CultureSelector" asp-action="@nameof(CultureSelectorController.Index)"
                               asp-route-culture="@SupportedCultures.RuRUCulture">
                                Переключить на Русский
                            </a>
                        </li>

                        <li class="nav-item" id="switch-culture-en-us">
                            <a class="nav-link text-dark"
                               asp-area="" asp-controller="CultureSelector" asp-action="@nameof(CultureSelectorController.Index)"
                               asp-route-culture="@SupportedCultures.EnUSCulture">
                                Go to English
                            </a>
                        </li>
                        <li class="nav-item" id="switch-culture-ru-ru">
                            <a class="nav-link text-dark"
                               asp-area="" asp-controller="CultureSelector" asp-action="@nameof(CultureSelectorController.Index)"
                               asp-route-culture="@SupportedCultures.RuRUCulture">
                                Перейти на Русский
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - lessson26_LocalizatoinInMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
